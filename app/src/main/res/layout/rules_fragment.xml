<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azure">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/azure"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_first_server_label"
                style="@style/text_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/first_server"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/table_top"
                style="@style/text_small"
                android:layout_width="@dimen/first_serve_table_width"
                android:layout_height="@dimen/first_serve_table_width"
                android:background="@drawable/table_azure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_first_server_label"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/table_bottom"
                style="@style/text_small"
                android:layout_width="@dimen/first_serve_table_width"
                android:layout_height="@dimen/first_serve_table_width"
                android:background="@drawable/table_yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/table_top"
                tools:ignore="ContentDescription" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_random"
                android:layout_width="@dimen/first_serve_table_width"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/charcoal"
                android:text="Random"
                app:layout_constraintStart_toStartOf="@id/table_bottom"
                app:layout_constraintTop_toBottomOf="@id/table_bottom" />

            <TextView
                android:id="@+id/tv_best_of_label"
                style="@style/text_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:labelFor="@id/slider_best_of"
                android:text="@string/best_of"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_random" />


            <com.google.android.material.slider.Slider
                android:id="@+id/slider_best_of"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:stepSize="2"
                android:valueFrom="3"
                android:valueTo="21"
                app:labelBehavior="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_best_of_label" />

            <Button
                android:id="@+id/lets_play"
                style="@style/large_button"
                android:layout_width="@dimen/main_screen_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/lets_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/slider_best_of" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>