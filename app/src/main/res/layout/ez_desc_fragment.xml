<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pong_mate_no_title_bg_80opacity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ez_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/agency_fb_regular"
                android:gravity="center"
                android:text="@string/simple_rules"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/ez_serve"
                style="@style/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rog_red"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/ez_return"
                style="@style/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rog_orange"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ez_point"
                style="@style/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rog_yel"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ez_turn"
                style="@style/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rog_gre"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ez_game"
                style="@style/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rog_blu"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ez_match"
                style="@style/rules_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rog_ind"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>


</layout>