<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/square_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/alert_btn_new_game"
        style="@style/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/new_match"
        android:padding="10dp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/btn_bg"
        app:layout_constraintEnd_toEndOf="@id/btn_bg"
        app:layout_constraintStart_toStartOf="@id/btn_bg"
        app:layout_constraintTop_toTopOf="@id/btn_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>