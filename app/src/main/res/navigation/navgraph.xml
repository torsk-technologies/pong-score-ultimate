<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/openingScreenFragment">

    <fragment
        android:id="@+id/openingScreenFragment"
        android:name="com.carlosreiakvam.android.handsdowntabletennis.opening_screen.OpeningScreenFragment"
        android:label="opening_screen_fragment"
        tools:layout="@layout/opening_screen_fragment">
        <action
            android:id="@+id/action_openingScreenFragment_to_playFragment"
            app:destination="@id/playFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_openingScreenFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_openingScreenFragment_to_rulesFragment"
            app:destination="@id/rulesFragment" />
    </fragment>
    <fragment
        android:id="@+id/playFragment"
        android:name="com.carlosreiakvam.android.handsdowntabletennis.play_screen.PlayFragment"
        android:label="PlayFragment"
        tools:layout="@layout/play_fragment">
        <action
            android:id="@+id/action_playFragment_to_optionsFragment"
            app:destination="@id/optionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.carlosreiakvam.android.handsdowntabletennis.OptionsFragment"
        android:label="OptionsFragment"
        tools:layout="@layout/in_game_options" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.carlosreiakvam.android.handsdowntabletennis.about_screen.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/about_fragment" />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.carlosreiakvam.android.handsdowntabletennis.rules_screen.RulesFragment"
        tools:layout="@layout/rules_fragment"
        android:label="RulesFragment" >
        <action
            android:id="@+id/action_rulesFragment_to_playFragment"
            app:destination="@id/playFragment" />
    </fragment>
</navigation>