<resources>
    <!-- Base application theme. -->
    <style name="Theme.HandsDownTableTennis" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="mainFont">@font/audiowide</item>

        <item name="buttonBgColor">@color/bt_red</item>
        <item name="mainTxtColor">@color/white</item>

        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/bt_red</item>
        <item name="colorPrimaryVariant">@color/bt_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--        Background-->

        <!--        Secondary brand color.-->
        <item name="colorSecondary">@color/bt_black</item>
        <item name="colorSecondaryVariant">@color/bt_black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--         Status bar color.-->
        <item name="android:statusBarColor">@color/bt_red</item>


    </style>

    <!--Create a new style and name it splashScreenTheme and add the following code-->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

</resources>