<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>

    <style name="text_large">
        <item name="autoSizeMinTextSize">68sp</item>
        <item name="autoSizeMaxTextSize">400sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>

    <style name="text_medium">
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeMinTextSize">48sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>
</resources>