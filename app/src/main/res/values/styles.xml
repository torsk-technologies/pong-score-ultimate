<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">275sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>

    <style name="in_game_options_style" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">68sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>
</resources>