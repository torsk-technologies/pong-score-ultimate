<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="large_button">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/kaushan_script</item>
    </style>

    <style name="match_score" parent="score_medium">
        <item name="android:layout_marginEnd">@dimen/match_score_end_margin</item>
    </style>


    <style name="main_header">
        <item name="android:textSize">275sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/kaushan_script</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="in_game_options_style" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:textSize">40sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/azure</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="score_large">
        <item name="fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">250sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="score_medium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">68sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_medium">
        <item name="android:textSize">68sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <!--        <item name="fontFamily">@font/kaushan_script</item>-->
    </style>

    <!--    <style name="btn_in_game_options"></style>-->

</resources>